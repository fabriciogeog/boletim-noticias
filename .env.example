# ========================================
# Configurações do Sistema de Boletim
# ========================================

# Ollama
OLLAMA_HOST=http://ollama:11434
OLLAMA_MODEL=llama3.2

# TTS (Text-to-Speech)
TTS_ENGINE=coqui
TTS_VOICE=default
TTS_SPEED=1.0

# API
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Frontend
FRONTEND_PORT=3000

# Banco de Dados
DATABASE_URL=sqlite:///./data/boletim.db

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Coleta de Notícias
NEWS_MAX_ARTICLES=20
NEWS_CACHE_TTL=1800  # 30 minutos em segundos

# Limites
MAX_BOLETIM_LENGTH=5000  # caracteres
MAX_AUDIO_SIZE_MB=50

# Recursos
# Descomente se tiver GPU NVIDIA
# ENABLE_GPU=true

# Opções Avançadas
ENABLE_SPEECH_FEEDBACK=true
ENABLE_KEYBOARD_SHORTCUTS=true

# Segurança (para uso em produção)
# API_KEY=seu-api-key-aqui
# CORS_ORIGINS=http://localhost:3000,https://seu-dominio.com
